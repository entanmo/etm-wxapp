page{background: #F8F8F8}
.information{height: 200rpx;background: #41AEFF;}
.information .information-portrait{width: 130rpx;height: 130rpx;top: 35rpx;left: 30rpx;border-radius: 50%;display: inline-block;overflow: hidden;}
.information .information-name{font-size: 32rpx;top: 40rpx;left: 185rpx;color: #fff}
.information .information-text1{font-size: 24rpx;top: 120rpx;left: 185rpx;}
.information .information-text2{font-size: 24rpx;top: 120rpx;left: 420rpx;}

.personal-list{padding: 0 30rpx;margin-bottom: 20rpx;}
.personal-list .list-box{font-size: 28rpx;height: 100rpx;line-height: 100rpx;color: #252525;border-bottom: 1px solid #ECEAE8;}
.personal-list .list-box:last-of-type{border: none;}
.personal-list .list-box2:last-of-type{border-top: 1px solid #ECEAE8;}
.personal-list .list-box .personal-icon{width: 46rpx;height: 46rpx;margin: 0 30rpx 0 0;}
.personal-list .list-box:after {
  content: "";
  display: inline-block;
  height: 15rpx;
  width: 15rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #C2BCB6;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  margin-top: -8rpx;
  top: 50%;
  right: 0rpx;
}

.default{width: 100%;height: 100%;top: 0;left: 0;background: none;}
